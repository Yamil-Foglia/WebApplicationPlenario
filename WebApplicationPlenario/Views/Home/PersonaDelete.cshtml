<div class="container">
    <div class="row mt-2 mb-4">
        <div class="col-3"></div>
        <div class="col" style="text-align:center">
            <h1>Eliminar Persona</h1>

            <h3>¿Estás seguro de que quieres eliminar esta persona?</h3>
        </div>
        <div class="col-3"></div>
    </div>
    <div class="row mt-2 mb-lg-4">
        <div class="col">
            <hr />
        </div>
    </div>
    <form method="post">
        <div class="row" style="text-align:center">
            <div class="col-3"></div>
            <div class="col">
                <input type="hidden" class="form-control w-100" name="personaID" value="@Model.PersonaID">
            </div>
            <div class="col-3"></div>
        </div>
        <div class="row" style="text-align:center">
            <div class="col-3"></div>
            <div class="col">
                <input type="text" disabled class="form-control w-100" style="max-width:none !important" value="@Model.Nombre">
            </div>
            <div class="col-3"></div>
        </div>

        <div class="row mt-4" style="text-align:center">
            <div class="col-3"></div>
            <div class="col">
                <input type="datetime" disabled class="form-control w-100" style="max-width:none !important" value="@Model.FechaNacimiento" placeholder="Fecha de nacimiento">
            </div>
            <div class="col-3"></div>
        </div>

        <div class="row mt-4" style="text-align:center">
            <div class="col-3"></div>
            <div class="col">
                <input type="text" disabled class="form-control w-100" style="max-width:none !important" value="@Model.CreditoMaximo" placeholder="Crédito máximo">
            </div>
            <div class="col-3"></div>
        </div>
        <div class="row mt-4" style="text-align:center">
            <div class="col-3"></div>
            <div class="col">
                <button type="submit" class="btn btn-danger w-100">Eliminar</button>
            </div>
            <div class="col-3"></div>
        </div>
        <div class="row mt-4">
            <div class="col">
                <hr />
            </div>
        </div>
        <div class="row">
            <div class="col">
                <a href="/Home/PersonaList" type="button" class="btn btn-info w-100">
                    Lista de personas &raquo;
                </a>
            </div>
            <div class="col">
                <a href="/Home" type="button" class="btn btn-info w-100">
                    Volver al inicio &raquo;
                </a>
            </div>
        </div>
    </form>
</div>


